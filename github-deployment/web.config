<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <appSettings>
    <add key="AZURE_CUSTOM_DOMAIN" value="app.growthaccelerator.nl" />
    <add key="AZURE_APP_TARGET" value="GA" />
    <add key="AZURE_RESOURCE_GROUP" value="GA_group" />
    <add key="DEPLOYMENT_SOURCE" value="github-deployment" />
  </appSettings>
  <system.webServer>
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    <httpPlatform processPath="D:\home\python3115x64\python.exe" 
                  arguments="-m gunicorn --bind 0.0.0.0:%HTTP_PLATFORM_PORT% --timeout 600 main:app"
                  stdoutLogEnabled="true"
                  stdoutLogFile="\home\LogFiles\ga-flask-app.log"
                  startupTimeLimit="120"
                  processesPerApplication="1">
      <environmentVariables>
        <environmentVariable name="PYTHONPATH" value="\home\site\wwwroot"/>
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%"/>
        <environmentVariable name="AZURE_APP_NAME" value="GA" />
        <environmentVariable name="AZURE_RESOURCE_GROUP" value="GA_group" />
        <environmentVariable name="AZURE_CUSTOM_DOMAIN" value="app.growthaccelerator.nl" />
        <environmentVariable name="FLASK_ENV" value="production" />
        <environmentVariable name="WEBSITE_HOSTNAME" value="app.growthaccelerator.nl" />
      </environmentVariables>
    </httpPlatform>
  </system.webServer>
</configuration>